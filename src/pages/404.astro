---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { config } from '@/config';

const title = `ページが見つかりません｜${config.site.name}`;
const description = 'お探しのページは見つかりませんでした。トップページへ戻れます。';
---
<BaseLayout title={title} description={description}>
  <section class="section">
    <div class="container">
      <h1 class="h1">404</h1>
      <p class="lead">お探しのページは見つかりませんでした。</p>
      <div class="actions">
        <a class="btn primary" href="/">トップへ戻る</a>
        <a class="btn subtle" href="/education">教育LPへ</a>
      </div>
      <p class="kicker">URLが正しいかご確認ください。</p>
    </div>
  </section>
</BaseLayout>

<style>
  .actions {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
    margin-top: 18px;
  }
</style>

