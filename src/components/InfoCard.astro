---
type Props = {
  title: string;
  icon?: string;
  class?: string;
};

const { title, icon, class: className } = Astro.props;
---

<div class:list={['card', className]}>
  {icon && <div class="icon" aria-hidden="true">{icon}</div>}
  <h3 class="h3 title">{title}</h3>
  <div class="content">
    <slot />
  </div>
</div>

<style>
  .card {
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  .icon {
    font-size: 2rem;
    margin-bottom: 1rem;
    line-height: 1;
  }
  .title {
    margin-bottom: 0.75rem;
  }
  .content {
    color: var(--text-muted);
    flex-grow: 1;
  }
</style>
