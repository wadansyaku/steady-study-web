---
import CTAButton from '@/components/CTAButton.astro';
import { config, normalizePathname } from '@/config';

const pathname = normalizePathname(Astro.url.pathname);
const nav = [
  { href: '/education', label: config.brands.education },
  { href: '/creator', label: config.brands.creator },
  { href: '/automation', label: config.brands.automation },
] as const;
---

<header class="header">
  <div class="container inner">
    <a class="logo" href="/" aria-label={`${config.site.name} ホーム`}>
      <span class="mark" aria-hidden="true">AY</span>
      <span class="text">{config.site.name}</span>
    </a>

    <nav class="nav" aria-label="Main Navigation">
      {
        nav.map((item) => (
          <a
            class="nav-link"
            href={item.href}
            aria-current={pathname === item.href ? 'page' : undefined}
          >
            {item.label}
          </a>
        ))
      }
    </nav>

    <div class="cta">
      <CTAButton kind="line" label="無料面談（30分）" />
    </div>
  </div>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    height: var(--header-height);
    backdrop-filter: blur(12px);
    background: rgba(15, 23, 42, 0.8); /* Slate 900 with opacity */
    border-bottom: 1px solid var(--border);
    display: flex;
    align-items: center;
  }
  .inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    height: 100%;
  }
  .logo {
    display: inline-flex;
    gap: 10px;
    align-items: center;
    text-decoration: none;
    font-weight: 800;
    letter-spacing: -0.01em;
    font-size: 1.25rem;
    color: var(--text);
  }
  .mark {
    width: 36px;
    height: 36px;
    border-radius: 8px;
    display: grid;
    place-items: center;
    background: linear-gradient(135deg, var(--brand), var(--accent));
    color: white;
    font-size: 0.9rem;
    font-weight: 700;
    box-shadow: 0 2px 10px rgba(99, 102, 241, 0.3);
  }
  .nav {
    display: flex;
    gap: 0.5rem;
    position: absolute; /* Center nav */
    left: 50%;
    transform: translateX(-50%);
  }
  .nav-link {
    color: var(--text-muted);
    text-decoration: none;
    padding: 0.5rem 0.75rem;
    border-radius: var(--radius-sm);
    font-size: 0.95rem;
    font-weight: 500;
    transition: all 0.2s;
  }
  .nav-link:hover {
    color: var(--text);
    background: rgba(255, 255, 255, 0.05);
  }
  .nav-link[aria-current='page'] {
    color: var(--text);
    background: rgba(255, 255, 255, 0.08);
  }
  .nav-link:focus-visible {
    outline: 2px solid var(--brand);
    outline-offset: -2px;
  }

  @media (max-width: 900px) {
    .nav {
      display: none; /* Hide nav on mobile for now, or implement mobile menu */
    }
    .inner {
      justify-content: space-between;
    }
  }
</style>
