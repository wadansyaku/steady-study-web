---
import CTAButton from '@/components/CTAButton.astro';
import { config, normalizePathname } from '@/config';

const pathname = normalizePathname(Astro.url.pathname);
const nav = [
  { href: '/education', label: '教育（受験伴走）' },
  { href: '/creator', label: 'クリエイター' },
  { href: '/automation', label: '法人AI' },
] as const;
---
<header class="header">
  <div class="container inner">
    <a class="logo" href="/" aria-label={`${config.site.name} ホーム`}>
      <span class="mark" aria-hidden="true">SS</span>
      <span class="text">{config.site.name}</span>
    </a>

    <nav class="nav" aria-label="主要ナビゲーション">
      {nav.map((item) => (
        <a
          class="nav-link"
          href={item.href}
          aria-current={pathname === item.href ? 'page' : undefined}
        >
          {item.label}
        </a>
      ))}
    </nav>

    <div class="cta">
      <CTAButton kind="line" label="無料面談（30分）" />
    </div>
  </div>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 50;
    backdrop-filter: blur(10px);
    background: rgba(11, 16, 32, 0.55);
    border-bottom: 1px solid rgba(148, 163, 184, 0.18);
  }
  .inner {
    display: grid;
    grid-template-columns: auto 1fr auto;
    gap: 12px;
    align-items: center;
    padding: 14px 0;
  }
  .logo {
    display: inline-flex;
    gap: 10px;
    align-items: center;
    text-decoration: none;
    font-weight: 900;
    letter-spacing: 0.01em;
  }
  .mark {
    width: 34px;
    height: 34px;
    border-radius: 10px;
    display: grid;
    place-items: center;
    background: linear-gradient(135deg, rgba(124, 58, 237, 0.95), rgba(34, 197, 94, 0.85));
    border: 1px solid rgba(199, 210, 254, 0.25);
  }
  .text {
    white-space: nowrap;
  }
  .nav {
    display: flex;
    gap: 14px;
    justify-content: center;
    flex-wrap: wrap;
  }
  .nav-link {
    color: var(--muted);
    text-decoration: none;
    padding: 8px 10px;
    border-radius: 10px;
    border: 1px solid transparent;
  }
  .nav-link:hover {
    text-decoration: none;
    border-color: rgba(199, 210, 254, 0.22);
    background: rgba(255, 255, 255, 0.05);
  }
  .nav-link:focus-visible {
    outline: 2px solid rgba(124, 58, 237, 0.9);
    outline-offset: 2px;
  }
  .nav-link[aria-current='page'] {
    color: var(--text);
    border-color: rgba(124, 58, 237, 0.55);
    background: rgba(124, 58, 237, 0.14);
  }
  @media (max-width: 860px) {
    .inner {
      grid-template-columns: 1fr auto;
      grid-template-areas:
        'logo cta'
        'nav nav';
    }
    .logo {
      grid-area: logo;
    }
    .nav {
      grid-area: nav;
      justify-content: flex-start;
      padding-top: 4px;
    }
    .cta {
      grid-area: cta;
    }
  }
</style>
