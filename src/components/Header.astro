---
import { config, normalizePathname } from '@/config';

const pathname = normalizePathname(Astro.url.pathname);
const nav = [
  { href: '/education', label: config.brands.education },
  { href: '/creator', label: config.brands.creator },
  { href: '/automation', label: config.brands.automation },
] as const;

const consultationLinks = [
  {
    persona: '受験',
    label: 'LINEで無料面談（30分）',
    href: config.urls.consultations.learningLine,
    external: true,
  },
  {
    persona: '制作',
    label: 'LINEで制作相談',
    href: config.urls.consultations.studioLine,
    external: true,
  },
  {
    persona: '法人',
    label: 'メールで問い合わせ（資料共有向け）',
    href: config.urls.consultations.automationMail,
    external: false,
    subLink: {
      label: 'LINEで軽く相談',
      href: config.urls.consultations.automationLine,
    },
  },
] as const;
---

<header class="header" data-consult-root>
  <div class="container inner">
    <a class="logo" href="/" aria-label={`${config.site.name} ホーム`}>
      <span class="mark" aria-hidden="true">AY</span>
      <span class="wordmark">{config.site.name}</span>
    </a>

    <nav class="nav" aria-label="主要ナビゲーション">
      {
        nav.map((item) => (
          <a
            class="nav-link"
            href={item.href}
            aria-current={pathname === item.href ? 'page' : undefined}
          >
            {item.label}
          </a>
        ))
      }
    </nav>

    <div class="cta-wrap">
      <button
        class="btn btn-accent consult-toggle"
        type="button"
        id="consult-toggle"
        aria-haspopup="dialog"
        aria-controls="consult-menu"
        aria-expanded="false"
      >
        無料相談
      </button>

      <div class="consult-menu" id="consult-menu" role="dialog" aria-modal="false" hidden>
        <p class="menu-title" id="consult-title">相談先を選択</p>
        <ul class="consult-list" aria-labelledby="consult-title">
          {
            consultationLinks.map((item) => (
              <li>
                <a
                  class="consult-link"
                  href={item.href}
                  target={item.external ? '_blank' : undefined}
                  rel={item.external ? 'noopener noreferrer' : undefined}
                >
                  <span class="cl-persona">{item.persona}</span>
                  <span class="cl-action">{item.label}</span>
                </a>
                {item.subLink && (
                  <a
                    class="sub-link"
                    href={item.subLink.href}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    {item.subLink.label}
                  </a>
                )}
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</header>

<script is:inline>
  (() => {
    const root = document.querySelector('[data-consult-root]');
    if (!root) return;

    const toggle = root.querySelector('#consult-toggle');
    const menu = root.querySelector('#consult-menu');
    if (!(toggle instanceof HTMLButtonElement) || !(menu instanceof HTMLElement)) return;

    const focusableSelector = 'a[href], button:not([disabled]), [tabindex]:not([tabindex="-1"])';
    let lastFocused = null;

    const openMenu = () => {
      lastFocused = document.activeElement;
      menu.hidden = false;
      toggle.setAttribute('aria-expanded', 'true');
      const firstFocusable = menu.querySelector(focusableSelector);
      if (firstFocusable instanceof HTMLElement) firstFocusable.focus();
    };

    const closeMenu = (restoreFocus = true) => {
      menu.hidden = true;
      toggle.setAttribute('aria-expanded', 'false');
      if (restoreFocus && lastFocused instanceof HTMLElement) lastFocused.focus();
    };

    toggle.addEventListener('click', () => {
      if (menu.hidden) openMenu();
      else closeMenu(false);
    });

    document.addEventListener('click', (event) => {
      const target = event.target;
      if (!(target instanceof Node) || root.contains(target)) return;
      if (!menu.hidden) closeMenu(false);
    });

    document.addEventListener('keydown', (event) => {
      if (event.key === 'Escape' && !menu.hidden) {
        closeMenu(true);
      }

      if (event.key !== 'Tab' || menu.hidden) return;

      const focusables = [...menu.querySelectorAll(focusableSelector)].filter(
        (element) => element instanceof HTMLElement && !element.hasAttribute('disabled')
      );
      if (focusables.length === 0) return;

      const first = focusables[0];
      const last = focusables[focusables.length - 1];
      const active = document.activeElement;

      if (!event.shiftKey && active === last) {
        event.preventDefault();
        if (first instanceof HTMLElement) first.focus();
      }
      if (event.shiftKey && active === first) {
        event.preventDefault();
        if (last instanceof HTMLElement) last.focus();
      }
    });
  })();
</script>

<style>
  /* ── Header Shell ──────────────────────────────── */
  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    backdrop-filter: blur(14px);
    background: rgba(15, 23, 42, 0.88);
    border-bottom: 1px solid var(--border);
  }

  .inner {
    display: grid;
    grid-template-columns: auto 1fr auto;
    align-items: center;
    gap: var(--sp-6);
    min-height: var(--header-height);
    padding-top: var(--sp-2);
    padding-bottom: var(--sp-2);
  }

  /* ── Logo ──────────────────────────────────────── */
  .logo {
    display: inline-flex;
    gap: var(--sp-2);
    align-items: center;
    text-decoration: none;
    color: var(--text);
  }
  .logo:hover { color: var(--text); }

  .mark {
    width: 32px;
    height: 32px;
    border-radius: var(--radius-sm);
    display: grid;
    place-items: center;
    background: var(--brand);
    color: #fff;
    font-size: var(--text-xs);
    font-weight: 800;
    letter-spacing: 0.04em;
    flex-shrink: 0;
  }

  .wordmark {
    font-weight: 800;
    font-size: var(--text-base);
    letter-spacing: -0.01em;
  }

  /* ── Nav ────────────────────────────────────────── */
  .nav {
    display: flex;
    gap: var(--sp-1);
    justify-content: center;
    flex-wrap: wrap;
  }

  .nav-link {
    color: var(--text-dim);
    text-decoration: none;
    padding: var(--sp-2) var(--sp-3);
    border-radius: var(--radius-sm);
    font-size: var(--text-sm);
    font-weight: 600;
    border: 1px solid transparent;
    transition: color 0.15s, background 0.15s, border-color 0.15s;
  }
  .nav-link:hover {
    color: var(--text);
    background: rgba(255,255,255,0.05);
  }
  .nav-link[aria-current='page'] {
    color: var(--text);
    border-color: rgba(99,102,241,0.3);
    background: rgba(99,102,241,0.1);
  }
  .nav-link:focus-visible {
    outline: var(--focus-ring);
    outline-offset: var(--focus-offset);
  }

  /* ── CTA Wrap / Consult Menu ───────────────────── */
  .cta-wrap {
    position: relative;
    justify-self: end;
  }

  .consult-toggle {
    min-width: 100px;
    min-height: 40px;
    padding: var(--sp-2) var(--sp-5);
    font-size: var(--text-sm);
  }

  .consult-menu {
    position: absolute;
    right: 0;
    top: calc(100% + var(--sp-2));
    width: min(360px, calc(100vw - var(--sp-8)));
    padding: var(--sp-5);
    z-index: 110;
    background: var(--surface);
    border: 1px solid var(--border-strong);
    border-radius: var(--radius);
    box-shadow: var(--shadow-lg);
  }
  .consult-menu[hidden] { display: none; }

  .menu-title {
    margin: 0 0 var(--sp-3);
    font-size: var(--text-xs);
    color: var(--text-dim);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.06em;
  }

  .consult-list {
    margin: 0;
    padding: 0;
    list-style: none;
    display: grid;
    gap: var(--sp-2);
  }

  .consult-link {
    display: grid;
    gap: 2px;
    padding: var(--sp-3) var(--sp-4);
    border-radius: var(--radius-sm);
    border: 1px solid var(--border);
    background: rgba(15, 23, 42, 0.5);
    color: var(--text);
    text-decoration: none;
    transition: border-color 0.15s, background 0.15s;
  }
  .consult-link:hover {
    border-color: rgba(99,102,241,0.35);
    background: rgba(99,102,241,0.08);
    color: var(--text);
  }
  .consult-link:focus-visible,
  .sub-link:focus-visible {
    outline: var(--focus-ring);
    outline-offset: var(--focus-offset);
  }

  .cl-persona {
    font-size: var(--text-xs);
    color: var(--text-dim);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.04em;
  }
  .cl-action {
    font-weight: 600;
    font-size: var(--text-sm);
    line-height: 1.4;
  }

  .sub-link {
    display: inline-block;
    margin-top: var(--sp-1);
    margin-left: var(--sp-4);
    font-size: var(--text-xs);
    color: var(--text-muted);
    text-decoration: underline;
    text-underline-offset: 3px;
  }
  .sub-link:hover { color: var(--text); }

  /* ── Responsive ────────────────────────────────── */
  @media (max-width: 900px) {
    .inner {
      grid-template-columns: 1fr auto;
      grid-template-areas:
        'logo cta'
        'nav nav';
      row-gap: var(--sp-2);
      min-height: auto;
    }
    .logo  { grid-area: logo; }
    .nav   {
      grid-area: nav;
      justify-content: flex-start;
      overflow-x: auto;
      white-space: nowrap;
      padding-bottom: var(--sp-1);
      -ms-overflow-style: none;
      scrollbar-width: none;
    }
    .nav::-webkit-scrollbar { display: none; }
    .cta-wrap { grid-area: cta; }
    .consult-menu { right: 0; }
  }
</style>
