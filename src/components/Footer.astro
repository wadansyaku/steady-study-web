---
import { config } from '@/config';
---

<footer class="footer">
  <div class="container inner">
    <div class="brand">
      <div class="name">{config.brands.home}</div>
      <div class="sub-brands text-muted">
        {config.brands.education} • {config.brands.creator} • {config.brands.automation}
      </div>
    </div>
    <nav class="links" aria-label="Footer Navigation">
      <a href={config.urls.englishApp}>AIYuMe English</a>
      <a href="/articles">記事一覧</a>
      <a href="/privacy">プライバシーポリシー</a>
      <a href="/contact">お問い合わせ</a>
    </nav>
    <div class="copy text-dim">
      &copy; {new Date().getFullYear()} {config.brands.home}. All rights reserved.
    </div>
  </div>
</footer>

<style>
  .footer {
    border-top: 1px solid var(--border);
    padding: 4rem 0;
    background: rgba(15, 23, 42, 0.5);
    margin-top: auto;
  }
  .inner {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    align-items: center;
    text-align: center;
  }
  .name {
    font-weight: 800;
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    letter-spacing: -0.01em;
  }
  .sub-brands {
    font-size: 0.9rem;
  }
  .links {
    display: flex;
    gap: 2rem;
    flex-wrap: wrap;
    justify-content: center;
  }
  .links a {
    color: var(--text-muted);
    text-decoration: none;
    font-size: 0.95rem;
    transition: color 0.2s;
  }
  .links a:hover {
    color: var(--brand);
    text-decoration: none;
  }
  .copy {
    font-size: 0.875rem;
  }

  @media (min-width: 768px) {
    .inner {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-start;
      text-align: left;
    }
    .links {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-end;
    }
    .copy {
      width: 100%;
      text-align: center;
      margin-top: 2rem;
      padding-top: 2rem;
      border-top: 1px solid var(--border);
    }
    .inner {
      flex-wrap: wrap;
    }
  }
</style>
